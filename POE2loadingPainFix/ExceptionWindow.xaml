<Window x:Class="POE2loadingPainFix.ExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POE2loadingPainFix"
        mc:Ignorable="d"
        Title="ExceptionWindow" Height="850" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtMain" IsReadOnly="True"/>
        <Border Grid.Row="1"> 
            <Button Content="Copy to clipboard" x:Name="btClipboard" Click="btClipboard_Click"/>
        </Border>
    </Grid>
</Window>
