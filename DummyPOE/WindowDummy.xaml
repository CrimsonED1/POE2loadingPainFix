<Window x:Class="DummyPOE.WindowDummy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DummyPOE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <Viewbox>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Width="200">
                    <Label Content="LevelState:"/>
                    <Label Content="{Binding LevelState}"/>

                </StackPanel>
                <Button Content="Fake Load Level Start" x:Name="btLevelStart" Click="btLevelStart_Click"/>
                <Border Height="40"></Border>
                <Button Content="Fake Load Level Done" x:Name="btLevelDone" Click="btLevelDone_Click"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
